<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/khungitem"
        android:alpha="0.4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtPhong_HoaDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Phòng: P202"
            android:textColor="#F88E4B"
            android:textSize="18sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/txtTienDien_HoaDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện: 1.083.000đ"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTienNuoc_HoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nước: 400.000đ"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTienDichVu_HoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dịch vụ : 100.000đ"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtTienPhong_HoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng : 3.000.000đ"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtTongHoaDon"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Tổng : 4.583.000đ"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtTinhTrang_HoaDon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Đã thanh toán"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>