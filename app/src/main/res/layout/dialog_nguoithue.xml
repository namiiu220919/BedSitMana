<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="20dp">

    <EditText
        android:id="@+id/edtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/khungedt"
        android:hint="Nhập tên đăng nhập"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#9F9B9B"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/khungedt"
        android:hint="Nhập mật khẩu"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#9F9B9B"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edtNhapLaiPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/khungedt"
        android:hint="Nhập lại mật khẩu"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#9F9B9B"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edtHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/khungedt"
        android:hint="Nhập họ tên"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="#9F9B9B"
        android:textSize="17dp" />

    <Spinner
        android:id="@+id/spnLoaiPhong"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:adapter="@layout/item_spiner"
        android:background="@drawable/khungedt"
        android:popupBackground="@color/black"
        android:textSize="17dp" />
    <Spinner
        android:id="@+id/spnPhong"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:adapter="@layout/item_spiner"
        android:background="@drawable/khungedt"
        android:popupBackground="@color/black"
        android:textSize="17dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Xác nhận"
            android:textColor="@color/orange"
            android:background="@drawable/khung_login"
            android:layout_margin="20dp"
            />
        <Button
            android:id="@+id/btnHuy"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Hủy"
            android:textColor="@color/orange"
            android:background="@drawable/khung_login"
            android:layout_margin="20dp"
            />
    </LinearLayout>

</LinearLayout>